extends ../layouts/index

block content
  div.py-10.pt-2
    h1(class="text-4xl my-10 mt-5 font-extrabold text-center") Bienes 
      span.font-normal Raíces
    h2(class='text-center text-5xl font-extrabold')= page

  div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
    p(class=error? 'bg-red-500' : 'bg-green-500').py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= message

    if !error
      a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase mt-8 block") Ya puedes Iniciar Sesión
