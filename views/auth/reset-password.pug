extends ../layouts/index

block content
  div.py-10.pt-2
    h1(class="text-4xl my-10 mt-5 font-extrabold text-center") Bienes 
      span.font-normal Ra√≠ces
    h2(class='text-center text-5xl font-extrabold')= page

    if errors 
      div(class="max-w-md mx-auto my-5")
        each error in errors 
          p(class="bg-red-600 text-white uppercase text-sm text-center p-2 mb-1 font-bold")= error.msg

    .mt-8.mx-auto.max-w-md
      div(class="bg-white py-8 px-4 shadow")
        form(class="space-y-5" method="POST") 
          div 
            label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Tu Password
            input(id="password" name="password" type="password" placeholder="Tu Password" noValidate class="w-full px-3 py-2 border border-gray-300 outline-none rounded-md placeholder-gray-400")

          input(type="submit", value="Cambiar password" class="w-full text-white font-bold py-3 cursor-pointer bg-indigo-600 hover:bg-indigo-700")
