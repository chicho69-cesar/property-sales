extends ../layouts/app-layout

block content
  div.py-10.pt-2
    h1(class="text-4xl my-10 mt-5 font-extrabold text-center") Bienes 
      span.font-normal Raíces
    h2(class='text-center text-5xl font-extrabold')= page

    a(href="/properties/create" class="rounded my-5 inline-block py-2 px-10 text-sm text-white font-bold uppercase bg-indigo-600 hover:bg-indigo-700 w-full md:w-auto") Publicar propiedades

    //- Asi podemos mostrar información en duro dentro de Pug
    //- pre= JSON.stringify(properties, undefined, 2)

    if properties.length 
      div(class="bg-white shadow rounded-lg")
        ul(class="divide-y divide-gray-200")
          each property in properties 
            li
              div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                div(class="sm:w-1/4 md:w-1/6")
                  img(src=`uploads/${property.image}` alt=`Imagen propiedad: ${property.title}` class="w-full block")
                
                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-2")
                  a(href=`/property/${property.id}` class="block text-2xl font-extrabold text-indigo-600 truncate")= property.title 
                  p(class="text-sm text-black font-bold")= property.category.name
                  
                  p(class="text-gray-600 font-bold flex flex-row justify-start items-center gap-1")
                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6")
                      path(stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                    span= property.price.name

                  a(href=`/messages/${property.id}` class="inline-block py-1 px-2 text-sm text-gray-600 font-bold bg-gray-200 rounded")= `${property.messages.length} mensajes` 

                div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col gap-2 lg:flex-row")
                  form(action="" method="") 
                    input(type="submit" value=`${property.published ? 'Publicado' : 'No publicado'}` class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer ${property.published ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}`)

                  a(href=`/properties/edit/${property.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-indigo-100 text-indigo-800") Editar

                  form(action=`/properties/delete/${property.id}` method="POST") 
                    input(type="submit" value="Eliminar" class="w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800")

        div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6")
          div(class="flex-1 flex justify-between sm:hidden")
            a(href=`/my-properties?page=${actualPage - 1}` class=`${actualPage == 1 ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50`) Anterior
            a(href=`/my-properties?page=${actualPage + 1}` class=`${actualPage == numberOfPages ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50`) Siguiente
          
          div(class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between")
            p(class="text-sm text-gray-700 gap-2") Mostrando 
              span(class="font-medium") #{offset + 1} a 
              span(class="font-medium") #{total < limit + offset? total : limit + offset} de 
              span(class="font-medium") #{total} resultados
          
          div(class="hidden sm:block")
            nav(class="relative z-0 inline-flex rounded-md shadow-md")
              - let nOfPage = 1
                while nOfPage <= numberOfPages
                  a(href=`/my-properties?page=${nOfPage}` class=`relative inline-flex items-center px-4 py-2 border text-sm font-medium ${actualPage == nOfPage ? 'bg-indigo-50 border-indigo-500 text-indigo-600' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50'}`) #{nOfPage++}
    else
      p.text-center No hay propiedades
