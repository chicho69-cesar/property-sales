extends ../layouts/app-layout

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
  div.py-10.pt-2
    h1(class="text-4xl my-10 mt-5 font-extrabold text-center") Bienes 
      span.font-normal Ra√≠ces
    h2(class='text-center text-5xl font-extrabold')= page

    a(href="/my-properties" class="rounded my-5 inline-block py-2 px-10 text-sm text-white font-bold uppercase bg-indigo-600 hover:bg-indigo-700 w-full md:w-auto") Volver 

    div(class="mx-auto max-w-4xl bg-white shadow")
      //- pre= JSON.stringify(messages, undefined, 2)
      if messages.length 
        ul 
          each message in messages 
            li(class="border-b border-gray-200 p-5")
              p(class="font-bold text-gray-800") Nombre: 
                span(class="font-normal")= message.user.name

              p(class="font-bold text-gray-800") Email: 
                span(class="font-normal")= message.user.email

              p(class="font-bold text-gray-800") Mensaje: 
                span(class="font-normal")= message.message

              p(class="font-bold text-gray-800") Enviado: 
                span(class="font-normal")= formatDate(message.createdAt)

      else 
        p(class="text-center text-gray-600 p-5") No hay mensajes
